<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    android:padding="0.2dp"
    app:cardCornerRadius="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="5dp">

        <!--Imagen de contacto-->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/Imagen_c_Item"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_lion" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <!--Id de contacto-->
            <TextView
                android:id="@+id/Id_c_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:text="@string/Id_c_Item"
                android:textSize="18sp"
                android:visibility="gone" />

            <!--Uid del usuario-->
            <TextView
                android:id="@+id/Uid_c_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:text="@string/Uid_c_Item"
                android:textSize="18sp"
                android:visibility="gone" />

            <!--Nombres de contacto-->
            <TextView
                android:id="@+id/nombres_c_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:gravity="center"
                android:text="@string/nombres_c_Item"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!--Apellidos de contacto-->
            <TextView
                android:id="@+id/apellidos_c_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:gravity="center"
                android:text="@string/apellidos_c_Item"
                android:textSize="18sp" />

            <!--Correo de contacto-->
            <TextView
                android:id="@+id/correo_c_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:gravity="center"
                android:text="@string/correo_c_Item"
                android:textSize="13sp" />

            <!--Teléfono de contacto-->
            <TextView
                android:id="@+id/telefono_c_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:text="@string/telefono_c_Item"
                android:textSize="18sp"
                android:visibility="gone" />

            <!--Edad de contacto-->
            <TextView
                android:id="@+id/edad_c_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:text="@string/edad_c_Item"
                android:textSize="18sp"
                android:visibility="gone" />

            <!--Dirección del contacto-->
            <TextView
                android:id="@+id/direccion_c_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/worksans"
                android:text="@string/direccion_c_Item"
                android:textSize="18sp"
                android:visibility="gone" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>